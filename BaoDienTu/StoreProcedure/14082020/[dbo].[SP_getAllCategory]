-- =============================================
-- Author:		Huynh Thao Nguyen
-- Create date: 2020-07-29
-- Description:	get all Category
-- =============================================
ALTER PROCEDURE [dbo].[SP_getAllCategory]
   
AS
    
    SELECT c.CategoryId,
	c.CategoryName,
	(Select COUNT(*) FROM SubCategory s WHERE s.CategoryId = c.CategoryId)As SoLuong
	FROM Category c
	WHERE c.IsDeleted=0
	 
